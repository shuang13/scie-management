            <form action="##">
                <div class="option">
                    <p class="form-label">栏目:</p>
                    <select id="cate-select">
                        <option value="" selected="selected">加载中...</option>

                    </select>
                </div>
                <div class="option">
                    <p class="form-label">标题:</p>
                    <input type="text" id="title">
                </div>
                <div class="option">
                    <p class="form-label">关键词:</p>
                    <input type="text" id="keywords">
                </div>
                <div class="option">
                    <p class="form-label">摘要:</p>
                    <textarea name="description" id="description"></textarea>
                </div>
                <div class="option">
