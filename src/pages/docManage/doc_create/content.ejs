                    <label class="form-label">封面图片</label>
                    <img class="cover-img" > 
                </div>
                <div class="option">
                    <p class="form-label">选择封面图</p>
                    <div class="cover">
                        <input type="file" id="file-cover" name="file-cover">
                    </div>
                </div>
                <div class="option">
                    <!-- 时间选择器 -->
                    <p class="form-label">选择时间</p>
                    <input type="text" id="time-pick">
                </div>

